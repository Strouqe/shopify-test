{% doc %}
  Renders a quick view button.

  @example
  {% content_for 'block', type: 'quick-view-button', id: 'quick-view-button' %}
{% enddoc %}

<div class="quick-view-button-wrapper" {{ block.shopify_attributes }}>
  <button type="button" class="quick-view-button">
    {{ block.settings.label | default: 'Quick View' }}
  </button>
</div>

{% schema %}
{
  "name": "Quick View Button",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Button Label",
      "default": "Quick View"
    }
  ],
  "presets": [
    {
      "name": "Quick View Button"
    }
  ]
}
{% endschema %}