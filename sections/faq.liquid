{% liquid
  assign faq_class_modifier = 'faq--' | append: section.settings.icon
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} faq color-{{ section.settings.color_scheme }} spacing-style {{ faq_class_modifier }}"
  data-testid="faq"
  style="
    {%- render 'spacing-style', settings: section.settings %}
    {% render 'border-override', settings: section.settings %}
    --faq-padding: {{ section.settings.padding }};
  "
  {% if request.visual_preview_mode %}
    data-shopify-visual-preview
  {% endif %}
>
  <div class="faq__content">
    <h2 class="faq__heading">{{ section.settings.heading }}</h2>
    {% for block in section.blocks %}
      <div class="faq-item">
        <details class="faq-item__details">
          <summary class="faq-item__heading">
            <span class="faq-item__heading-text">{{ block.settings.heading }}</span>
            <span class="faq-item__icon">
              {% if section.settings.icon == 'arrow' %}
                <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M11 5.5L7 9.5L3 5.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% else %}
                <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M2.75 7H11.25" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <path d="M7 2.75L7 11.25" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              {% endif %}
            </span>
          </summary>
          <div class="faq-item__content">{{ block.settings.content }}</div>
        </details>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
.faq {
  max-width: var(--content-width, 1150px);
  margin: 0 auto;
  text-align: center;
}

.faq__content {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  align-items: center;
}

.faq__heading {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 1rem;
}

.faq-item {
  border-bottom: 1px solid var(--border-color, #e5e5e5);
  padding-bottom: 1rem;
  width: 100%;
  max-width: 800px;
}

.faq-item__details {
  cursor: pointer;
}

.faq-item__heading {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 1.25rem;
  font-weight: bold;
  width: 100%;
}
.faq-item__icon {
  display: inline-flex;
  margin-left: 0.5rem;
  transition: transform 0.3s;
}

.faq-item__details[open] .faq-item__icon {
  transform: rotate(180deg);
}
.faq-item__heading-text {
  flex: 1 1 auto;
  text-align: left;
}

.faq-item__content {
  font-size: 1rem;
  margin-top: 0.5rem;
  display: none;
}

.faq-item__details[open] .faq-item__content {
  display: block;
}
{% endstylesheet %}

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "select",
      "id": "icon",
      "label": "Icon Style",
      "options": [
        { "value": "arrow", "label": "Arrow" },
        { "value": "plus", "label": "Plus" }
      ],
      "default": "arrow"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 50,
      "unit": "px",
      "step": 1,
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "faq-item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Sample Question"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Sample Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}