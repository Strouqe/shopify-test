{% stylesheet %}
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  background-color: var(--color-background);
  padding: 20px 70px;
  position: relative;
  display: flex;
  max-width: 1130px;
  width: 100%;
}

.popup-close {
  position: absolute;
  right: 1rem;
  top: 1rem;
  font-size: 1.5rem;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  color: var(--color-foreground);
  z-index: 1001;
}

.popup-close:hover {
