}

.size-chart-table th {
  color: white;
  font-weight: 600;
}

.size-chart-table th:nth-child(1),
.size-chart-table th:nth-child(2),
.size-chart-table th:nth-child(3),
.size-chart-table th:nth-child(4),
.size-chart-table td:nth-child(1),
