{% stylesheet %}
.size-chart-table {
  width: 100%;
  margin: 1rem 0;
}

.size-chart-table table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.875rem;
  table-layout: fixed;
}

.size-chart-table thead {
  background-color: black;
}

.size-chart-table th,
.size-chart-table td {
  padding: 0.75rem;
  text-align: left;
  border-bottom: 1px solid var(--color-border);
  white-space: normal;
}

.size-chart-table th:not(:last-child),
.size-chart-table td:not(:last-child) {
  text-align: center;
}

.size-chart-table th {
  color: white;
  font-weight: 600;
}

.size-chart-table th:nth-child(1),
.size-chart-table th:nth-child(2),
.size-chart-table th:nth-child(3),
.size-chart-table th:nth-child(4),
.size-chart-table td:nth-child(1),
.size-chart-table td:nth-child(2),
.size-chart-table td:nth-child(3),
.size-chart-table td:nth-child(4) {
  width: 140px;
}

.size-chart-table th:nth-child(5),
.size-chart-table td:nth-child(5) {
  width: 450px;
}

.size-chart-table td:first-child {
  font-weight: bold;
}

.size-chart-table tbody tr:nth-child(even) {
  background-color: #f0f0f0;
}

.size-chart-subheading {
  font-family: 'Open Sans', sans-serif;
  font-weight: 600;
  font-size: 14px;
  line-height: 20px;
  letter-spacing: 0%;
  text-align: center;
  text-transform: uppercase;
  margin: 32px auto;
  max-width: 400px;
  height: 40px;
}

.measurement-images {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(1, auto);
  gap: 10px;
  place-items: center;
  margin: 1.2rem auto;
  max-width: 400px;
}

.measurement-item {
  width: 165px;
  display: flex;
  flex-flow: column nowrap;
}

.measurement-item img {
  width: 100%;
  height: auto;
}

.measurement-item p {
  margin-top: 5px;
  font-family: 'Open Sans', sans-serif;
  font-weight: 400;
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0%;
  text-align: center;
  color: var(--color-foreground);
}

/* Mobile Styles */
@media screen and (max-width: 749px) {
  .size-chart-table {
    margin: 0.5rem 0;
    width: 100%;
  }

  .size-chart-table table {
    width: 100%;
    font-size: 0.75rem;
    border-collapse: separate;
    border-spacing: 0 94px;
    table-layout: fixed;
  }

  .size-chart-table thead th {
    background-color: black;
  }

  .size-chart-table th:nth-child(5) {
    display: none;
  }

  .size-chart-table th,
  .size-chart-table td {
    padding: 0;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
    white-space: normal;
  }

  .size-chart-table th:not(:last-child),
  .size-chart-table td:not(:last-child) {
    text-align: center;
  }

  .size-chart-table th:nth-child(1),
  .size-chart-table th:nth-child(2),
  .size-chart-table th:nth-child(3),
  .size-chart-table th:nth-child(4) {
    width: 25%;
    height: 94px;
    box-sizing: border-box;
  }

  .size-chart-table td:nth-child(1),
  .size-chart-table td:nth-child(2),
  .size-chart-table td:nth-child(3),
  .size-chart-table td:nth-child(4) {
    width: 25%;
    height: 94px;
    box-sizing: border-box;
    background-color: white;
  }

  .size-chart-table tbody tr {
    position: relative;
  }

  .size-chart-table td:nth-child(5) {
    position: absolute;
    top: -94px;
    left: 0;
    width: 100%;
    height: 94px;
    padding: 8px;
    background-color: rgba(0, 0, 0, 0.05);
    font-family: 'Open Sans', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0%;
    text-align: left;
    z-index: 1;
    overflow: auto;
  }

  .size-chart-subheading {
    font-size: 12px;
    line-height: 16px;
    margin: 1rem auto;
    max-width: 300px;
    height: auto;
  }

  .measurement-images {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
    gap: 10px;
    margin: 1rem auto;
    place-items: center;
  }
}

@media (min-width: 750px) and (max-width: 1130px) {
  .size-chart-table th:nth-child(1),
  .size-chart-table th:nth-child(2),
  .size-chart-table th:nth-child(3),
  .size-chart-table th:nth-child(4),
  .size-chart-table td:nth-child(1),
  .size-chart-table td:nth-child(2),
  .size-chart-table td:nth-child(3),
  .size-chart-table td:nth-child(4) {
    width: 18%;
  }

  .size-chart-table th:nth-child(5),
  .size-chart-table td:nth-child(5) {
    width: 28%;
  }
}
{% endstylesheet %}

