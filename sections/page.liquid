{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

<div class="page-content">
  <h3>{{ page.title }}</h3>
  {{ page.content }}
</div>

{% stylesheet %}
  .page-content {
    max-width: 1110px;
    margin: 10px auto;
    padding: 0 10px; 
  }
  h3{
    margin: 0 auto;
    text-align: center;
  }
  p {
    padding-left: 10px;
    }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.page",
  "settings": []
}
{% endschema %}